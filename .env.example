# Site Analyzer Environment Variables Template
# ===========================================
# Copy this file to .env.rest, .env.grpc, or .env.cli and configure as needed

# Interface Configuration
REST_PORT=5000
GRPC_PORT=50051

# Storage Configuration
# Options: file, mongodb, sql
STORAGE_TYPE=file
STORAGE_DIRECTORY=./data/scans

# MongoDB Configuration (if using mongodb storage)
MONGODB_URL=mongodb://admin:password123@mongodb:27017/site_analyzer?authSource=admin

# SQL Configuration (if using sql storage)
# DATABASE_URL=sqlite:///./data/site_analyzer.db
# DATABASE_URL=postgresql://user:password@localhost:5432/site_analyzer
# DATABASE_URL=mysql://user:password@localhost:3306/site_analyzer

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/site_analyzer.log

# Browser Configuration
HEADLESS=true
TIMEOUT=30000

# LLM Configuration
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.0-flash-exp

# API Keys (REQUIRED - Replace with your actual keys)
GEMINI_API_KEY=your-gemini-api-key-here
SECURITY_TRAILS_API_KEY=your-security-trails-api-key-here
CAPSOLVER_API_KEY=your-capsolver-api-key-here

# Optional API Keys
OPENAI_API_KEY=your-openai-api-key-here
AWS_BEDROCK_URL=https://bedrock-runtime.us-east-1.amazonaws.com
AWS_REGION=us-east-1

# Enumeration Configuration
ENABLED_ENUMERATORS=web_scanner,dns_enumeration,security_trails

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Security Configuration
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000

# Performance Configuration
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=300
