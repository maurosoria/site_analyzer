# gRPC Service Environment Variables
# ===============================

# Interface Configuration
GRPC_PORT=50051
REST_PORT=5000

# Storage Configuration
STORAGE_TYPE=mongodb
MONGODB_URL=mongodb://admin:password123@mongodb:27017/site_analyzer?authSource=admin

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/grpc-server.log

# Browser Configuration
HEADLESS=true
TIMEOUT=30000

# LLM Configuration
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.0-flash-exp
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: OpenAI Configuration
# OPENAI_API_KEY=your-openai-api-key-here

# Optional: AWS Bedrock Configuration
# AWS_BEDROCK_URL=https://bedrock-runtime.us-east-1.amazonaws.com
# AWS_REGION=us-east-1

# API Keys for External Services
SECURITY_TRAILS_API_KEY=your-security-trails-api-key-here
CAPSOLVER_API_KEY=your-capsolver-api-key-here

# Enumeration Configuration
ENABLED_ENUMERATORS=web_scanner,dns_enumeration,security_trails

# Cache Configuration (if using Redis)
REDIS_URL=redis://redis:6379/1
CACHE_TTL=3600

# gRPC Specific Configuration
GRPC_MAX_WORKERS=10
GRPC_MAX_MESSAGE_SIZE=4194304
GRPC_KEEPALIVE_TIME_MS=30000
GRPC_KEEPALIVE_TIMEOUT_MS=5000
GRPC_KEEPALIVE_PERMIT_WITHOUT_CALLS=true
GRPC_HTTP2_MAX_PINGS_WITHOUT_DATA=0
GRPC_HTTP2_MIN_TIME_BETWEEN_PINGS_MS=10000
GRPC_HTTP2_MIN_PING_INTERVAL_WITHOUT_DATA_MS=300000

# Security Configuration
GRPC_ENABLE_REFLECTION=true
GRPC_ENABLE_HEALTH_CHECK=true

# Performance Configuration
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=300
